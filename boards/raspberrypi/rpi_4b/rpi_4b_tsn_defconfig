# Raspberry Pi 4B TSN (Time-Sensitive Networking) Configuration
# Based on rpi_4b_defconfig with TSN features enabled

# Base Raspberry Pi 4B configuration
CONFIG_SOC_BCM2711=y
CONFIG_BOARD_RPI_4B=y
CONFIG_ARM64=y
CONFIG_ARM_MMU=y
CONFIG_ARM_ARCH_TIMER=y

# Console and Shell
CONFIG_CONSOLE=y
CONFIG_UART_CONSOLE=y
CONFIG_SERIAL=y
CONFIG_UART_BCM2711_AUX=y
CONFIG_SHELL=y

# Networking Core
CONFIG_NETWORKING=y
CONFIG_NET_CONFIG_NEED_IPV4=y
CONFIG_NET_CONFIG_NEED_IPV6=y
CONFIG_NET_IPV4=y
CONFIG_NET_IPV6=y
CONFIG_NET_UDP=y
CONFIG_NET_TCP=y
CONFIG_NET_DHCPV4=y

# Ethernet and PHY
CONFIG_NET_L2_ETHERNET=y
CONFIG_ETH_BCM2711=y

# TSN (Time-Sensitive Networking) Features
CONFIG_NET_L2_IEEE802_TSN=y

# IEEE 802.1CB Frame Replication and Elimination (FRER)
CONFIG_NET_L2_IEEE802_1CB=y
CONFIG_NET_L2_IEEE802_1CB_MAX_STREAMS=64
CONFIG_NET_L2_IEEE802_1CB_DEFAULT_HISTORY_LENGTH=64
CONFIG_NET_L2_IEEE802_1CB_LOG_LEVEL=3

# IEEE 802.1Qbv Time-Aware Scheduling (TAS)
CONFIG_NET_L2_IEEE802_1QBV=y
CONFIG_NET_L2_IEEE802_1QBV_MAX_GATE_ENTRIES=512
CONFIG_NET_L2_IEEE802_1QBV_TIMER_RESOLUTION_NS=1000
CONFIG_NET_L2_IEEE802_1QBV_LOG_LEVEL=3

# IEEE 802.1Qbu Frame Preemption
CONFIG_NET_L2_IEEE802_1QBU=y
CONFIG_NET_L2_IEEE802_1QBU_MIN_FRAG_SIZE=64
CONFIG_NET_L2_IEEE802_1QBU_LOG_LEVEL=3

# IEEE 802.1AS (gPTP) for time synchronization
CONFIG_NET_GPTP=y
CONFIG_NET_L2_IEEE802_1AS=y
CONFIG_NET_GPTP_STATISTICS=y
CONFIG_NET_GPTP_LOG_LEVEL=3

# TSN Statistics and Management
CONFIG_NET_L2_IEEE802_TSN_STATS=y
CONFIG_NET_L2_IEEE802_TSN_MGMT=y

# Memory and Threading
CONFIG_MAIN_STACK_SIZE=2048
CONFIG_SYSTEM_WORKQUEUE_STACK_SIZE=2048
CONFIG_NET_TX_STACK_SIZE=2048
CONFIG_NET_RX_STACK_SIZE=2048

# Network Buffer Configuration for TSN
CONFIG_NET_BUF_RX_COUNT=64
CONFIG_NET_BUF_TX_COUNT=64
CONFIG_NET_PKT_RX_COUNT=32
CONFIG_NET_PKT_TX_COUNT=32

# GPIO for hardware control
CONFIG_GPIO=y

# Logging
CONFIG_LOG=y
CONFIG_LOG_BACKEND_UART=y
CONFIG_LOG_DEFAULT_LEVEL=3

# Network Shell Commands
CONFIG_NET_SHELL=y
CONFIG_NET_STATISTICS=y

# VLAN support for TSN
CONFIG_NET_VLAN=y

# Enhanced error checking
CONFIG_ASSERT=y

# Memory debugging (optional, disable for production)
CONFIG_HEAP_MEM_POOL_SIZE=65536